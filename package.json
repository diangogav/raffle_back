{
  "name": "raffle_back",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "test": "npx bun test",
    "test:coverage": "bun test --coverage",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run --watch src/index.ts",
    "lint": "eslint --ignore-pattern .gitignore .",
    "lint:fix": "bun run lint -- --fix",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "build": "rimraf dist && tsc",
    "typeorm": "tsx -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/shared/database/infrastructure/postgres/data-source.ts",
    "migration:generate": "bun typeorm migration:generate src/shared/database/infrastructure/postgres/migrations/$npm_config_name",
    "migration:run": "bun typeorm migration:run",
    "migration:revert": "bun typeorm migration:revert",
    "migration:create": "tsx -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create src/shared/database/infrastructure/postgres/migrations/$npm_config_name"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/swagger": "^1.1.5",
    "@sendgrid/mail": "^8.1.4",
    "@slack/bolt": "^4.2.0",
    "bcrypt": "^5.1.1",
    "diod": "^3.0.0",
    "dotenv": "^16.4.5",
    "elysia": "latest",
    "elysia-rate-limit": "2.2.0",
    "eslint-config-codely": "^4.2.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^9.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node-cron": "^3.0.11",
    "bun-types": "latest",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.6",
    "install": "^0.13.0",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2"
  },
  "module": "src/index.js",
  "lint-staged": {
    "*.(js|ts)": "npm run lint:fix"
  }
}